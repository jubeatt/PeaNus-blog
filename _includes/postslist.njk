<ul class="post-list">
{% for post in postslist | reverse %}
  <li>
    <a class="post-title" href="{{ post.url | url }}">
      {% if post.data.title %}
        {{ post.data.title }}
      {% else %}
        <code>{{ post.url }}</code>
      {% endif %}
    </a>
    {% summary post=post.templateContent %}
    <div class="flex">
      <img class="avatar mr-10" src="{{ metadata.author.avatarUrl}}" alt="author's avatar" />
      <a href="/about">{{ metadata.author.name }}</a>
        &nbsp;on&nbsp;
      <time class="f-monospace" datetime="{{ post.date | htmlDateString }}">{{ post.date | htmlDateString }}</time>
    </div>
  </li>
{% endfor %}
</ul>

